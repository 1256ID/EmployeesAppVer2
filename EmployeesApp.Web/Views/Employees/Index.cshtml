@model IndexVM

@{
    ViewBag.Title = "Employees List";
}

<ul>
    @foreach (var employee in Model.EmployeeItems)
    {
        <li>
            <a asp-controller="Employees" asp-action="Details" asp-route-id="@employee.Id" style="color:@(employee.ShowAsHighlighted ? "red" : "white");">@employee.Name</a>
        </li>
    }
</ul>